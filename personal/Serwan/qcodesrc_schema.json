{
    "description": "schema for a qcodes config file",
    "type": "object",
    "properties": {
        "core": {
            "description": "controls core settings of qcodes",
            "type": "object",
            "properties": {
                "legacy_mp": {
                    "description": "control legacy buggy multiprocess",
                    "type": "boolean",
                    "default": false
                },
                "loglevel": {
                    "description": "control logging  level",
                    "type": "string",
                    "enum": [
                        "CRITICAL",
                        "ERROR",
                        "WARNING",
                        "INFO",
                        "DEBUG"
                    ],
                    "default": "DEBUG"
                }
            },
            "required": [
                "legacy_mp",
                "loglevel"
            ]
        },
        "user": {
            "description": "controls user settings of qcodes",
            "type": "object",
            "properties": {}
        },
        "gui": {
            "description": "controls gui of qcodes",
            "type": "object",
            "properties": {
                "plotlib": {
                    "description": "Plotting library",
                    "type": "string",
                    "enum": [
                        "QT",
                        "matplotlib"
                    ],
                    "default": "matplotlib"
                },
                "notebook": {
                    "description": "Use notebook frontend",
                    "type": "boolean",
                    "default": true
                }
            },
            "required": [
                "notebook",
                "plotlib"
            ]
        }
    },
    "$schema": "http://json-schema.org/draft-04/schema#",
    "required": [
        "gui",
        "core",
        "user"
    ]
}