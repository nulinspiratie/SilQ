{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [
        "gui",
        "core",
        "user"
    ],
    "properties": {
        "gui": {
            "required": [
                "notebook",
                "plotlib"
            ],
            "properties": {
                "plotlib": {
                    "type": "string",
                    "default": "matplotlib",
                    "enum": [
                        "QT",
                        "matplotlib"
                    ],
                    "description": "Plotting library"
                },
                "notebook": {
                    "type": "boolean",
                    "default": true,
                    "description": "Use notebook frontend"
                }
            },
            "type": "object",
            "description": "controls gui of qcodes"
        },
        "core": {
            "required": [
                "legacy_mp",
                "loglevel"
            ],
            "properties": {
                "loglevel": {
                    "type": "string",
                    "default": "DEBUG",
                    "enum": [
                        "CRITICAL",
                        "ERROR",
                        "WARNING",
                        "INFO",
                        "DEBUG"
                    ],
                    "description": "control logging  level"
                },
                "legacy_mp": {
                    "type": "boolean",
                    "default": false,
                    "description": "control legacy buggy multiprocess"
                }
            },
            "type": "object",
            "description": "controls core settings of qcodes"
        },
        "user": {
            "properties": {},
            "type": "object",
            "description": "controls user settings of qcodes"
        }
    },
    "description": "schema for a qcodes config file"
}