{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "schema for a qcodes config file",
    "properties": {
        "core": {
            "description": "controls core settings of qcodes",
            "properties": {
                "loglevel": {
                    "enum": [
                        "CRITICAL",
                        "ERROR",
                        "WARNING",
                        "INFO",
                        "DEBUG"
                    ],
                    "description": "control logging  level",
                    "default": "DEBUG",
                    "type": "string"
                },
                "default_fmt": {
                    "description": "default location formatter",
                    "default": "data/{date}/#{counter}_{name}_{time}",
                    "type": "string"
                }
            },
            "type": "object",
            "required": [
                "loglevel"
            ]
        },
        "user": {
            "description": "controls user settings of qcodes",
            "properties": {},
            "type": "object"
        },
        "gui": {
            "description": "controls gui of qcodes",
            "properties": {
                "notebook": {
                    "description": "Use notebook frontend",
                    "default": true,
                    "type": "boolean"
                },
                "plotlib": {
                    "enum": [
                        "QT",
                        "matplotlib"
                    ],
                    "description": "Plotting library",
                    "default": "matplotlib",
                    "type": "string"
                }
            },
            "type": "object",
            "required": [
                "notebook",
                "plotlib"
            ]
        }
    },
    "type": "object",
    "required": [
        "gui",
        "core",
        "user"
    ]
}